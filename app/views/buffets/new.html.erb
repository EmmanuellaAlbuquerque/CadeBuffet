<h1>Cadastre o seu Buffet</h1>

<% if @buffet.errors.any? %>
  <p>Verifique os erros abaixo:</p>
  <% @buffet.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<% end %>

<%= form_with model: @buffet do |f| %>
  <div>
    <%= f.label :trading_name %>
    <%= f.text_field :trading_name %>
  </div>

  <div>
    <%= f.label :company_name %>
    <%= f.text_field :company_name %>
  </div>  

  <div>
    <%= f.label :registration_number %>
    <%= f.text_field :registration_number %>
  </div>

  <div>
    <%= f.label :phone %>
    <%= f.telephone_field :phone %>
  </div>   

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>   

  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :neighborhood %>
    <%= f.text_field :neighborhood %>
  </div>

  <div>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>  

  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>
  </div> 

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :payment_methods%>:

    <% if @payment_methods.present? %>
      <%= f.collection_check_boxes :payment_method_ids, @payment_methods, :id, :name %>
    <% end %>
  </div>  
  
  <%= f.submit t('helpers.submit.create') %>
  
<% end %>