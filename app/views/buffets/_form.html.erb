<%= form_with model: @buffet, class: "row" do |f| %>
  <div class="col-md-4 offset-md-4">
    <%= f.label :trading_name, class: "form-label mt-3" %>
    <%= f.text_field :trading_name, class: "form-control" %>
  </div>

  <div class="col-md-4 offset-md-4">
    <%= f.label :company_name, class: "form-label mt-3" %>
    <%= f.text_field :company_name, class: "form-control" %>
  </div>  

  <div class="col-md-4 offset-md-4">
    <%= f.label :registration_number, class: "form-label mt-3" %>
    <%= f.text_field :registration_number, class: "form-control" %>
  </div>

  <div class="col-md-4 offset-md-4">
    <%= f.label :phone, class: "form-label mt-3" %>
    <%= f.telephone_field :phone, class: "form-control" %>
  </div>   

  <div class="col-md-4 offset-md-4">
    <%= f.label :email, class: "form-label mt-3" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>   

  <div class="col-md-4 offset-md-4">
    <%= f.label :address, class: "form-label mt-3" %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="col-md-4 offset-md-4">
    <%= f.label :neighborhood, class: "form-label mt-3" %>
    <%= f.text_field :neighborhood, class: "form-control" %>
  </div>

  <div class="col-md-4 offset-md-4">
    <%= f.label :state, class: "form-label mt-3" %>
    <%= f.text_field :state, class: "form-control" %>
  </div>  

  <div class="col-md-4 offset-md-4">
    <%= f.label :city, class: "form-label mt-3" %>
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="col-md-4 offset-md-4">
    <%= f.label :zipcode, class: "form-label mt-3" %>
    <%= f.text_field :zipcode, class: "form-control" %>
  </div> 

  <div class="col-md-4 offset-md-4">
    <%= f.label :description, class: "form-label mt-3" %>
    <%= f.text_area :description, size: "70x5", class: "form-control" %>
  </div>

  <div class="col-md-4 offset-md-4">
    <%= f.label :payment_methods, class: "form-label mt-3" %>:
    <% if @buffet.errors[:payment_methods].present? %>
      <div class="invalid-feedback mb-3">
        <%= @buffet.errors[:payment_methods].to_sentence %>
      </div>
    <% end %>

    <div class="grid"> 
      <% if @payment_methods.present? %>
        <%= f.collection_check_boxes :payment_method_ids, @payment_methods, :id, :name do |cb| %>
        <div>
          <%= cb.check_box(class: "form-check-input me-2") %>
          <%= cb.label(class: "form-check-label") %>           
        </div>         
        <% end %>
      <% end %>      
    </div>
  </div>  
  
  <div class="col-4 offset-md-4">
    <%= f.submit t('helpers.submit.submit'), class: "btn btn-highlight mt-3 mb-5" %>
  </div>

<% end %>