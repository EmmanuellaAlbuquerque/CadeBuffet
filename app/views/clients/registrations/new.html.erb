<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "container") do |f| %>
  <%= render "clients/shared/error_messages", resource: resource %>

  <div class="field row">
    <%= f.label :name, class: "mt-2" %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control mt-2" %>
  </div>

  <div class="field row">
    <%= f.label :itin, class: "mt-2" %><br />
    <%= f.text_field :itin, class: "form-control mt-2" %>
  </div>  

  <div class="field row">
    <%= f.label :email, class: "mt-2" %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control mt-2" %>
  </div>

  <div class="field row">
    <%= f.label :password, class: "mt-2" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control mt-2" %>
  </div>

  <div class="field row">
    <%= f.label :password_confirmation, class: "mt-2" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mt-2" %>
  </div>

  <div class="actions d-grid gap-2 row">
    <%= f.submit t('devise.registrations.new.sign_up'), class: "mt-4 btn btn-highlight" %>
  </div>
<% end %>

<%= render "clients/shared/links" %>
