<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field row">
    <%= f.label :email, class: "mt-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-2" %>
  </div>

  <div class="field row">
    <%= f.label :password, class: "mt-2" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control mt-2" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-2">
      <%= f.check_box :remember_me, class: "form-check-input me-2" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

  <div class="actions d-grid gap-2 row">
    <%= f.submit "Log in", class: "mt-4 btn btn-highlight" %>
  </div>
<% end %>

<%= render "clients/shared/links" %>
